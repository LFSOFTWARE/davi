  <link href="/css/responsive.css" rel="stylesheet" />
</head>

<body>
  <div class="hero_area">
    <!-- header section strats -->
    <%- include('partials/navbar.ejs') %>
      <!-- end header section -->


  </div>
  <!-- end hero area -->

  <!-- contact section -->

  <section class="contact_section layout_padding">
    <div class="container px-0">
      <div class="heading_container ">
        <h5 class="">
          <a href="/">Home</a> > <a href="/Produtos">Loja</a> > Detalhes do produto > <%= prod.nome %>
        </h5>
      </div>
      <hr>
    </div>
    <div class="container container-bg">
      <div class="row">
        <div class="col-lg-7 col-md-6 px-0">
          <div class="map_container">
            <div class="map-responsive">


              <!-- <div class="prod_img" id="prod_img">
                <img src="/img/<%= prod.img %> " alt="">
              </div> 
              -->
              <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <div class="prod_img" id="prod_img">
                      <img  class="imgcarro" id="imgcarro" src="/img/<%= photos[0].img %> " alt="">
                    </div>
                  </div>

                  <%photos.forEach((e)=>{%>
                    <div class="carousel-item">
                      <div class="prod_img" id="prod_img">
                        <img 
                          id="imgcarro"
                          class="imgcarro"
                          src="/img/<%= e.img %> " alt="">
                      </div>
                    </div>
                  
                    <% })%>

                </div>


                <button style="padding: 0; margin: 0;  border: 0;background-color:white " class="carousel-control-prev"
                  type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                  <span style=" background-image: url(/img/arrou2.png); " class="carousel-control-prev-icon"
                    aria-hidden="true"></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button style="padding: 0; margin: 0;  border: 0;background-color:white " class="carousel-control-next"
                  type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                  <span style=" background-image: url(/img/arrow-_.png); " class="carousel-control-next-icon"
                    aria-hidden="true"></span>
                  <span class="visually-hidden">Next</span>
                </button>
              </div>
              <div style="border-bottom: 1px solid gray ;">
                <center>
                  <%photos.forEach((e)=>{%>
                    <img onclick="modal_troca(this)"  class="btn imgPreviw  imgcarro imgclick" id="imgModal " data-bs-toggle="modal" data-bs-target="#exampleModal"  
                      src="/img/<%= e.img %>"  alt="">

                           <!-- Modal -->
                    <div class="modal fade  " id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog  modal-xl">
                      <div class="modal-content">
                        <div class="modal-header">

                          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                          <img class="imgModal" src="/img/<%= e.img %> " width="80%" alt="">
                          
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                          
                        </div>
                      </div>
                    </div>
                  </div>
                    <% })%>
                </center>

              </div>

            </div>

          </div>
        </div>
        <div class="col-md-6 col-lg-5 px-0">
          <form action="#">
            <div>
              <center>
                <p id="id_item" style="display: none;">
                  <%= prod.id %>
                </p>
                <h3>Modelo <b class="nome"> <%= prod.nome %> </b> 
                </h3>
                <h5> R$ <%= prod.price %>
                </h5>
                <p>Ponta 1: Ø <%= prod.ponta1 %> mm</p>
                <p>Ponta 2: Ø <%= prod.ponta2 %> mm</p>
                <p>Peso: <%= prod.peso %> g</p>
              </center>


            </div>

            <div>
              <p>
                
                <div style="margin-bottom: 5%;" class="paleta_hero">
                  <div style=" background-color: black" class="paleta"></div>
                  <div style=" background-color: blue" class="paleta"></div>
                  <div style=" background-color: white" class="paleta"></div>
                  <div style=" background-color: orange" class="paleta"></div>
                </div>
                <b>"</b>
                <%- prod.desc %>
              </p>
            </div>
            <div class="d-flex ">

              <button type="button" id="btn-add">
                Adicionar
              </button>

            </div>
            <div class="d-flex ">

              <button style="cursor:pointer;" onclick="window.location='/checkOut';" type="button" id="btn-add">

                Finalizar
              </button>



            </div>
          </form>
        </div>

      </div>



    </div>

    <section class="shop_section layout_padding">
      <div class="container">
        <div class="heading_container heading_center">
          <h2>
            Talvez você se interesse
          </h2>
        </div>
        <div class="row">

          <% produtos.forEach((produto)=>{ %>




            <div class="col-sm-6 col-md-4 col-lg-3">
              <div class="box">
                <a href="/Produto/<%= produto.id %> ">
                  <div class="img-box">
                    <img  src="/img/<%= produto.img %> " alt="">
                  </div>
                  <div class="detail-box">
                    <h6>
                      Modelo <%= produto.nome %>
                    </h6>
                    <h6>

                      <span>
                        R$ <%= produto.price %>
                      </span>
                    </h6>
                  </div>
                  <div class="new">
                    <span>
                      Novo
                    </span>
                  </div>
                </a>
              </div>
            </div>
            <%}) %>




        </div>
        <div class="btn-box">
          <a href="/Produtos">
            Veja todos os produtos
          </a>
        </div>
      </div>
    </section>
  </section>

  <!-- end contact section -->

  <!-- info section -->

  <%- include("partials/footer.ejs") %>
    <!-- end info section -->




